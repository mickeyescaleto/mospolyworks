{
  "extends": "@repo/typescript-config/default.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "types": ["bun-types"],
    "target": "ES2021",
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../../node_modules", "node_modules", "dist"]
}
