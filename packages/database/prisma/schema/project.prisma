model Project {
    id               String   @id @default(auto()) @map("_id") @db.ObjectId
    title            String
    content          String
    author           User     @relation("project_author", fields: [authorId], references: [id])
    authorId         String   @map("author_id") @db.ObjectId
    partners         User[]   @relation("project_partners", fields: [partnerIds], references: [id])
    partnerIds       String[] @map("partner_ids") @db.ObjectId
    theme            Theme    @relation(fields: [themeId], references: [id])
    themeId          String   @map("theme_id") @db.ObjectId
    tags             Tag[]    @relation(fields: [tagIds], references: [id])
    tagIds           String[] @map("tag_ids") @db.ObjectId
    status           Status   @default(DRAFT)
    rejectionComment String?  @map("rejection_comment")
    link             String?
    updatedAt        DateTime @updatedAt() @map("updated_at")
    createdAt        DateTime @default(now()) @map("created_at")

    @@map("projects")
}

enum Status {
    DRAFT
    PUBLISHED
    REJECTED
    REPEATED
    VERIFIED
}
